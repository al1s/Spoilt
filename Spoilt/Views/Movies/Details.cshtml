@model Spoilt.Models.Movie;
@{
    ViewData["Title"] = "Movie Details";
    Layout = "_Layout";
}

<div class="row">
    <div class="col s12 m8 offset-m2">

        @await Html.PartialAsync("../Shared/_MovieDetails", Model)

        <a asp-controller="Spoilers" asp-action="Create" asp-route-id="@Model.ID" class="btn">Add spoiler!</a>

        <ul class="collection">
            @foreach (Spoiler spoiler in Model.Spoilers)
            {
                @await Html.PartialAsync("../Shared/_Spoiler", spoiler)
            }

        </ul>
    </div>
</div>