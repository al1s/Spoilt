@model Spoilt.Models.Spoiler


<div class="row">
    <div class="col s12 m6">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span class="card-title">Card Title</span>
                <p>@Model.SpoilerText</p>
                <p>@Model.Created.ToLocalTime()</p>
            </div>
            <div class="card-action">
                <form>
                    @Html.Hidden("MovieID")
                    @Html.Hidden("SpoilerID")
                    @Html.Hidden("UserSessionID")
                    @Html.Hidden("CreatedAt")
                    <a><i class="material-icons">arrow_upward</i></a>
                </form>
                <a asp-action="Edit" asp-controller="Spoilers" asp-route-id="@Model.ID">Edit This Spoiler</a>
            </div>
        </div>
    </div>
</div>