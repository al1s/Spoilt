@model Spoilt.Models.Spoiler

<div class="row">
    <div class="col s12 m6">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span class="card-title">Card Title</span>
                <p>@Model.SpoilerText</p>
                <p>@Model.Created.ToLocalTime()</p>
            </div>
            <div class="card-action">
                <button class="upvote" data-spoilerID="@Model.ID" data-movieID="@Model.MovieID"><i class="material-icons">arrow_upward</i></button>
                <p class=@($"display-votes-spoiler-{Model.ID}")>@Model.Votes</p>
                <a asp-action="Edit" asp-controller="Spoilers" asp-route-id="@Model.ID">Edit This Spoiler</a>
            </div>
        </div>
    </div>
</div>