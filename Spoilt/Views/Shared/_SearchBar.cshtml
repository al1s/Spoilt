@* This is a partial that will render a search bar in the Movies/Index view. The Movies/Index view also happens to be the homepage. *@
@{
    ViewData["Title"] = "_SearchBar";
}

@* Wrap this search form in something visible and pretty *@

<div class="row">
    <form class="col s12" asp-controller="Movies" asp-action="Index" method="get">
        <div class="row">
            <div class="input-field col s10">
                <i class="material-icons prefix">search</i>
                <input id="icon_prefix2" type="search" name="title" class="autocomplete" required>
                <label for="icon_prefix2">Search Movie</label>
            </div>
            <div class="input-field col s2">
                <button class="btn-large waves-effect waves-light" type="submit" name="action">
                    Search
                </button>
            </div>
        </div>
    </form>
</div>
