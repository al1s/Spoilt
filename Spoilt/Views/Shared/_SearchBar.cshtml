@* This is a partial that will render a search bar in the Movies/Index view. The Movies/Index view also happens to be the homepage. *@
@{
    ViewData["Title"] = "_SearchBar";
}

<h2>Search:</h2>

@* Wrap this search form in something visible and pretty *@
<div>
    <form asp-controller="Movies" asp-action="Index" method="get">
        <div class="input-field">
            <input id="search" type="search" name="title" required>
            <label class="label-icon" for="search"><i class="material-icons">search</i></label>
            <i class="material-icons">close</i>
        </div>
    </form>
</div>

